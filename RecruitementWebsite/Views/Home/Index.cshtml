

<html ng-app="MyApp">

<head>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/app/VacancyController.js"></script>
    <script src="http://lorenzofox3.github.io/smart-table-website/bower_components/angular-smart-table/dist/smart-table.js"></script>
    
    <link data-require="bootstrap-css@3.0.0" data-semver="3.0.0" rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" />

</head>

<body ng-controller="BodyController">

    <div ng-controller="safeCtrl">
        <button class="btn btn-success" ng-click="GetData()">Click Me</button>
        This is data from the back-end:
        <div ng-repeat="row in displayedCollection track by $index">
            {{row.title}}
            {{row.company}}
        </div>

    </div>

    <div ng-controller="safeCtrl">

        <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped">

            <thead>
            <th colspan="5"><input st-search="" class="form-control" placeholder="global search ..." type="text" /></th>
            <tr>
                <th st-sort="title">title</th>
                <th st-sort="company">company</th>
                <th st-sort="city">city</th>
                <th st-sort="state">state</th>
                <th st-sort="salary">salary</th>
            </tr>
            </thead>

            <tbody>
                <tr ng-repeat="row in displayedCollection track by $index">
                    <td>{{row.title}}</td>
                    <td>{{row.company}}</td>
                    <td>{{row.city}}</td>
                    <td>{{row.state}}</td>
                    <td>{{row.salary}}</td>

                    <td>
                        <button type="button" ng-click="removeItem(row)" class="btn btn-sm btn-danger">
                            <i class="glyphicon glyphicon-remove-circle">
                            </i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</body>

</html>


